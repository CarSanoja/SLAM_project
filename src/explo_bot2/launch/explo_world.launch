<?xml version="1.0" encoding="UTF-8"?>

<launch>

  <include file="$(find explo_bot2)/launch/robot_description.launch"/>

  <arg name="world" default="empty"/> 
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>

  <!-- "gazebo_ros" indica un paquete en donde buscar el archivo-->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find explo_bot2)/worlds/udacity.world"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>

  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" 
output="screen" args="-urdf -param robot_description -model explo_bot2"/>

  <!--node pkg="rviz" type="rviz" name="rviz" args="-d /home/robond/Documents/Localization_Project/src/explo_bot/launch/Rvizconfig.rviz"/-->
  <!--node name="rviz" pkg="rviz" type="rviz" respawn="false"/-->


</launch>
